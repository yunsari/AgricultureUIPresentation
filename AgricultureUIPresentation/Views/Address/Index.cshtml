@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <center>
                <h4 class="card-title">Adres Listesi</h4>
            </center>
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Açıklama 1</th>
                                <th>Açıklama 2</th>
                                <th>Açıklama 3</th>
                                <th>Açıklama 4</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Desc1</td>
                                    <td>@item.Desc2</td>
                                    <td>@item.Desc3</td>
                                    <td>@item.Desc4</td>
                                    <td><a href="/Address/EditAddress/@item.AddressID" class="btn btn-warning">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <label style="color:indianred; font-weight:bolder;">Kayıtlı veri bulunamadı..</label>
                </div>
            }
            <br />

        </div>
    </div>
</div>



