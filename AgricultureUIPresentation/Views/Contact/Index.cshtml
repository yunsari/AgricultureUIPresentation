@using EntityLayer.Concrete
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <center>
                <h4 class="card-title">Mesajlar</h4>
            </center>
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Konu</th>
                                <th>Mail</th>
                                <th>Tarih</th>
                                <th>Mesajı Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.MessageTitle</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                    <td><a href="/Contact/DetailsMessage/@item.ContactID" class="btn btn-warning">Mesajı Gör</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <label style="color:indianred; font-weight:bolder;">Kayıtlı veri bulunamadı..</label>
                </div>
            }
            <br />

        </div>
    </div>
</div>



