@using EntityLayer.Concrete
@model List<Announcement>

<div class="blog" id="blog">
    <div class="container">
        <h3 class="tittle">Son Duyurular</h3>
        <p class="heading-btm-w3ls">Çiftliğimizden son haberler.</p>

        @foreach (var item in Model)
        {
            <div class="blog-grid-w3-agileits">
                <div class=" @item.Image">
                    <a href="#" data-toggle="modal" data-target="#myModal2"></a>
                </div>
                <div class=" col-md-5 blog-info-w3layouts">
                    <h6> <a href="#" data-toggle="modal" data-target="#myModal2">@item.Title</a></h6>
                    <div class="inner-info">
                        <a href="#" class="blog-text-w3ls bar">Başa dön.</a><span>@item.Date</span>
                        <p class="para-w3-agileits">@item.Description</p>
                    </div>
                    <a href="#" class="blog-more-agile" data-toggle="modal" data-target="#myModal2">Detayı Gör</a>

                </div>
                <div class="clearfix"></div>
            </div>
        }
    </div>
</div>

