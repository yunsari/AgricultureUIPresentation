@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <center>
                <h4 class="card-title">Takım Arkadaşlarımız</h4>
            </center>
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    *
                                </th>
                                <th>
                                    Ad
                                </th>
                                <th>
                                    Görev
                                </th>
                                <th>
                                    Sil
                                </th>
                                <th>
                                    Düzenle
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face7.jpg" alt="image" />
                                    </td>
                                    <td>@item.PersonName</td>
                                    <td>@item.Title</td>
                                    <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Team/EditTeam/@item.TeamID" class="btn btn-warning">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <label style="color:indianred; font-weight:bolder;">Kayıtlı veri bulunamadı..</label>
                </div>
            }
            <br />
            <a href="/Team/AddTeam" class="btn btn-outline-primary">Yeni Personel Girişi</a>

        </div>
    </div>
</div>

