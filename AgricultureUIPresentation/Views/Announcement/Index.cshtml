@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <br />
    <center>
        <h1>Duyuru Listesi</h1>
    </center>
    <br />

    <table class="table table-bordered table-hover table-secondary">

        <tr>

            <th style="text-align:center">Başlık</th>
            <th style="text-align:center">Tarih</th>
            <th style="text-align:center">Durum</th>
            <th style="text-align:center">Sil</th>
            <th style="text-align:center">Düzenle</th>
            <th style="text-align:center">Durum Değiştir</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">@item.Title</td>
                <td style="text-align:center">@item.Date.ToString("dd.MM.yyyy")</td>
                @if (item.Status == false)
                {
                    <td style="text-align:center; color: red;">Pasif</td>
                }
                else
                {
                    <td style="text-align:center; color: green;">Aktif</td>
                }
                <td style="text-align:center"><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-danger">Sil</a></td>
                <td style="text-align:center"><a href="/Announcement/EditAnnouncement/@item.AnnouncementID" class="btn btn-warning">Düzenle</a></td>
                @if (item.Status == true)
                {
                    <td style="text-align:center"><a href="/Announcement/PassiveAnnouncement/@item.AnnouncementID" class="btn btn-secondary">Pasif Et</a></td>

                }
                else
                {
                    <td style="text-align:center"><a href="/Announcement/ActiveAnnouncement/@item.AnnouncementID" class="btn btn-success">Aktif Et</a></td>
                }
            </tr>
        }
    </table>
    <br />
    <a href="/Announcement/AddAnnouncement" class="btn btn-outline-primary">Yeni Duyuru Girişi</a>
</div>

